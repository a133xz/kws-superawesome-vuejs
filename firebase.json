{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [{
      "source": "**/*.@(eot|otf|ttf|ttc|woff|font.css)",
      "headers": [{
        "key": "Access-Control-Allow-Origin",
        "value": "*"
      }]
    }, {
      "source": "**/*.@(js|css)",
      "headers": [{
        "key": "Cache-Control",
        "value": "public, max-age=2628000"
      }]
    }, {
      "source": "**/*.@(jpg|jpeg|gif|png|otf)",
      "headers": [{
        "key": "Cache-Control",
        "value": "public, max-age=2628000"
      }]
    }, {
      "source": "404.html",
      "headers": [{
        "key": "Cache-Control",
        "value": "max-age=300"
      }]
    }]
  }
}
